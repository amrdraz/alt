
<div class="row">
{{#each model }}
  {{#link-to "lesson" this class="col-sm-6 col-md-4 col-lg-3" }}
    <div class="thumbnail">
      <div style="background:{{unbound color}}" class="lesson-color"></div>
      <div class="caption">
        <h3 class="center">{{title}}</h3>
      </div>
    </div>
  {{/link-to}}
{{/each}}
</div>